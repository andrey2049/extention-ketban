{
  "manifest_version": 3,
  "name": "Auto Add Friend Facebook",
  "version": "1.0",
  "description": "Tự động kết bạn trên Facebook với thanh bên cố định.",
  "permissions": [
    "scripting", 
    "activeTab", 
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Mở bảng điều khiển kết bạn"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}